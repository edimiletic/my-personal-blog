<%- include("partials/header.ejs") %>

<div class="container  mb-5 pt-4">
    <!-- View Mode -->
    <div id="view-mode" class="row justify-content-center">
        <div class="col-lg-8">
            <article class="blog-post">
                <header class="mb-4">
                    <h1 class="display-4 mb-3"><%= title %></h1>
                    <hr>
                </header>
                
                <div class="post-content mb-5">
                    <p class="lead"><%= content %></p>
                </div>
                
                <div class="post-actions d-flex gap-3 border-top pt-4">
                    <button id="edit-btn" class="btn btn-outline-primary">
                        <i class="bi bi-pencil-square me-2"></i>Edit Post
                    </button>
                    <button id="delete-btn" class="btn btn-outline-danger">
                        <i class="bi bi-trash3 me-2"></i>Delete Post
                    </button>
                    <a href="/" class="btn btn-outline-secondary ms-auto">
                        <i class="bi bi-arrow-left me-2"></i>Back to Home
                    </a>
                </div>
            </article>
        </div>
    </div>

    <!-- Edit Mode -->
    <div id="edit-mode" class="row justify-content-center" style="display: none;">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm ">
                <div class="card-body p-4">
                    <h2 class="card-title mb-4">
                        Update Post
                    </h2>
                    <form action="/update" method="POST">
                        <input type="hidden" name="originalTitle" value="<%= title %>">
                        
                        <div class="mb-4">
                            <label for="title" class="form-label fw-bold">Title</label>
                            <input type="text" class="form-control form-control-lg" id="title" name="title" value="<%= title %>" required>
                        </div>
                        
                        <div class="mb-4">
                            <label for="content" class="form-label fw-bold">Content</label>
                            <textarea name="content" id="content" class="form-control" rows="10" required><%= content %></textarea>
                        </div>
                        
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary">
                                Save Changes
                            </button>
                            <button type="button" id="cancel-btn" class="btn btn-secondary">
                                Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div id="delete-modal" class="modal fade" tabindex="-1" style="display: none;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Post
                </h5>
                <button type="button" class="btn-close btn-close-white close" aria-label="Close"></button>
            </div>
            <form action="/delete" method="POST">
                <div class="modal-body">
                    <p class="mb-0">Are you sure you want to delete this post? This action cannot be undone.</p>
                    <input type="hidden" name="title" value="<%= title %>">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary cancel-btn">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-danger delete-btn">
                        <i class="bi bi-trash3 me-2"></i>Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    $(document).ready(function(){
        // Edit functionality
        $("#edit-btn").click(function(){
            $("#view-mode").fadeOut(300, function(){
                $("#edit-mode").fadeIn(300);
                $("html, body").animate({ scrollTop: 0 }, 300);
            });
        });
        
        $("#cancel-btn").click(function(){
            $("#edit-mode").fadeOut(300, function(){
                $("#view-mode").fadeIn(300);
            });
        });
        
        // Delete modal functionality
        $("#delete-btn").click(function(){
            $("#delete-modal").css("display", "block").addClass("show");
            $("body").append('<div class="modal-backdrop fade show"></div>');
        });
        
        function closeModal() {
            $("#delete-modal").removeClass("show").css("display", "none");
            $(".modal-backdrop").remove();
        }
        
        $(".close, .cancel-btn").click(function(){
            closeModal();
        });
        
        // Close modal when clicking outside
        $(window).click(function(event){
            if($(event.target).is("#delete-modal")){
                closeModal();
            }
        });
    });
</script>

